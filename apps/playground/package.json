{
  "name": "playground",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -b && vite build",
    "check:lint": "biome lint .",
    "check:types": "tsc --build --noEmit --pretty",
    "check:types:watch": "tsc --watch",
    "check:react-compiler": "eslint .",
    "clean": "del .turbo && del dist && del node_modules",
    "dev": "vite",
    "lint:fix": "biome lint --write .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@portabletext/editor": "^2.4.1",
    "@portabletext/plugin-character-pair-decorator": "workspace:^",
    "@portabletext/plugin-markdown-shortcuts": "workspace:^",
    "@portabletext/plugin-one-line": "workspace:^",
    "@xstate/store": "^3.9.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@vitejs/plugin-react": "^4.7.0",
    "babel-plugin-react-compiler": "19.1.0-rc.3",
    "globals": "^16.0.0",
    "vite": "^6.3.4"
  }
}
